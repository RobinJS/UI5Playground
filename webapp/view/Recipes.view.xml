<mvc:View
	controllerName="ui5.playground.controller.Recipes"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true">
    <Panel>
        <content>
            <ScrollContainer
                height="100%"
                width="100%"
                horizontal="false"
                vertical="true">
                <List items="{/RecipeList}">
                    <StandardListItem
                        title="{name}"
                        description="{description}"
                        iconDensityAware="false"
                        iconInset="false"
                        type="Navigation" />
                </List>
            </ScrollContainer>
        </content>
    </Panel>
</mvc:View>