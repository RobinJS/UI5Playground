<mvc:View
	controllerName="ui5.playground.controller.Storage"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
    <Panel>
        <ScrollContainer
            height="100%"
            width="100%"
            horizontal="false"
            vertical="true">
            <List items="{/ProductList}">
                <InputListItem label="{name}">
                    <Button text="-" press="onMinusPress" />
                    <Text text="{quantity}" />
                    <Button text="+" press="onPlusPress" />
                </InputListItem>
            </List>
        </ScrollContainer>
    </Panel>
</mvc:View>