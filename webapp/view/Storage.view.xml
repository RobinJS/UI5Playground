<mvc:View
	controllerName="ui5.playground.controller.Storage"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
    <Panel>
        <!-- <Button text="Save changes"
                press="onSaveChanges"
                ariaDescribedBy="acceptButtonDescription genericButtonDescription"/>
        
        <Button text="+" press="onAddItem" /> -->
        <Toolbar>
            <Button text="Save changes"
                type="Ghost"
                press="onSaveChanges"
                ariaDescribedBy="acceptButtonDescription genericButtonDescription"/>
            <ToolbarSpacer/>
            <Button text="Add item"
                type="Ghost"
                press="onAddItem" />
        </Toolbar>
        <ScrollContainer
            height="100%"
            width="100%"
            horizontal="false"
            vertical="true">
            <List items="{/ProductList}">
                <InputListItem label="{name}">
                    <StepInput
                        value="{quantity}"
                        min="0"
                        max="100"
                        step="1"
                        width="120px"
                        change="onStepInputChange"
                    />
                </InputListItem>
            </List>
        </ScrollContainer>
    </Panel>
</mvc:View>