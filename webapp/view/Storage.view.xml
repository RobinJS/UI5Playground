<mvc:View
	controllerName="sap.ui.demo.nav.controller.storage"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Page
		id="storagePage"
		title="{i18n>StorageTitle}"
		showNavButton="true"
		navButtonPress=".onNavBack"
		class="sapUiResponsiveContentPadding">
		<content>
			<ScrollContainer
                height="100%"
                width="100%"
                horizontal="false"
                vertical="true">
                <List items="{/ProductList}">
                    <StandardListItem title="{name}" counter="{quantity}" />
                </List>
            </ScrollContainer>
		</content>
	</Page>
</mvc:View>